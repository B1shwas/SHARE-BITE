generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      ROLE
  tokens    Token[]
}

model Token {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String
  isValid   Boolean  @default(true)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

enum ROLE {
  ADMIN
  VOLUNTEER
  DONOR
  RECEIVER
}
